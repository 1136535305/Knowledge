<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yjq.knowledge">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".zhihuNewsdetail.ZhihuNewsDetailActivity"
            android:label="@string/title_activity_zhihu_news_detail"
            android:theme="@style/AppTheme.transparentStatusbar" />
        <activity
            android:name=".editor.EditorListActivity"
            android:label="@string/title_activity_editor_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".editor.EditorDetailActivity"
            android:label="@string/title_activity_editor_detail"
            android:theme="@style/AppTheme.EditorNoActionBar" />
        <activity
            android:name=".comments.CommentsActivity"
            android:label="@string/title_activity_comments"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>